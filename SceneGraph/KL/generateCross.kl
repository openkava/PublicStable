operator generateCross(
  io Vec3 positions[],
  io Integer indices[],
  io Scalar size
) {
  //  positions.resize( 6 );
  indices.resize(6);

  positions[0].x = size;
  positions[1].x = - size;
  positions[2].y = size;
  positions[3].y = - size;
  positions[4].z = size;
  positions[5].z = - size;

  indices[0] = 0;
  indices[1] = 1;
  indices[2] = 2;
  indices[3] = 3;
  indices[4] = 4;
  indices[5] = 5;
}