use Vec3, Quat, Xfo;

operator aimTransform(io Xfo xfo, io Vec3 target) {
  var Vec3 currforward = xfo.ori.getZaxis();
  var Vec3 newforward = xfo.tr - target;
  newforward.setUnit();

  Quat adj;
  adj.setFrom2Vectors(currforward, newforward);
  xfo.ori = adj * xfo.ori;
  xfo.ori = xfo.ori.setUnit();
}