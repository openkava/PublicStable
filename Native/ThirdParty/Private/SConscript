  ffmpegFlags = {
      'CPPDEFINES': [ '__STDC_LIMIT_MACROS', '__STDC_CONSTANT_MACROS' ],
      'CPPPATH': [os.path.join( includeBaseDir, 'ffmpeg' )],
      'LIBS': [archLibs( 'ffmpeg', ['swscale','avformat','avcodec','avutil'] ), 'z', 'bz2'],
  }
